int n = arr.length;
        int ans = 0;
        for (int i = 0; i < n - 2; i++) {
            Map<Integer, Integer> map = new HashMap<>();
            for (int j = i + 1; j < n; j++) {
                if (arr[i] != 0 && arr[j] != 0 &&
                    M % (arr[i] * arr[j]) == 0) {
                    int need = M / (arr[i] * arr[j]);
                    ans += map.getOrDefault(need, 0);
                }
                map.put(arr[j], map.getOrDefault(arr[j], 0) + 1);
            }
        }
        return ans;